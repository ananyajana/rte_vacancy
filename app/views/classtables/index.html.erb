<h1>Listing Classes Table</h1>
<div class="header-bg">
	<div class="wrap"> 
			<% flash.each do |name, msg| %>
			<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>
		<div class="total-box">
				<div class="total">
					<div class="header_top">
				     	<div class="menu">
				     		<ul>
						    	<li class="active"><a href="index.html">Home</a></li>
						    	<li><a href="about.html">About Us</a></li>
						      	<li><a href="allschool.html">All Schools</a></li>
						    	<li><a href="contact.html">Contact Us</a></li>
						    	
			     			
												<% if current_user %>
							Logged in as <%= current_user.username %>.
							<li><%= link_to "Sign Out", signed_out_path %></li>
							<li><%= link_to "Account Settings", account_settings_path %></li>
							  <% if current_user.is_admin %>
								  <li><%= link_to "Admin", admin_users_path %></li>
							  <% end %>
						<% else %>
							<li><%= link_to "Sign up", new_user_path %></li> or
							<li><%= link_to "Sign In", sign_in_path %></li>
						<% end %>
						<div class="clear"></div>
						</ul>
				     	</div>
					
				   
		     			<div class="clear"></div>
		     	</div>
			     <div class="header-bottom">
					 <div class="logo">
						<h1>H.O.P.E</h1>
						<h3>Harnessing Opportunities for Pursuing Education</h3>
					 </div>
					 	
					<div class="search">
						 <form action="/schools" method="get">
								<input id="search" name="search" placeholder="School Name/Location" type="text" />
								<input name="commit" type="submit" value="" />
						   </form>
					</div>
					<div class="clear"></div> 
				</div>
			</div>	
		</div>
	 </div>
</div>

<table>
  <tr>
    <th>School</th>
    <th>Class no</th>
    <th>Gen seats</th>
    <th>Obc seats</th>
    <th>Sc seats</th>
    <th>St seats</th>
    <th>Other seats</th>
	<!--<th></th>-->
    <% if current_user %>
	    <th></th>
	    <th></th>
    <% end %>
  </tr>

<% @classtables.each do |classtable| %>
  <tr>
    <td><%= classtable.school_id %></td>
    <td><%= classtable.class_no %></td>
    <td><%= classtable.gen_seats %></td>
    <td><%= classtable.obc_seats %></td>
    <td><%= classtable.sc_seats %></td>
    <td><%= classtable.st_seats %></td>
    <td><%= classtable.other_seats %></td>
	<!--<td><%= link_to 'Show', classtable %></td>-->
    <% if current_user %>
	    <td><%= link_to 'Edit', edit_classtable_path(classtable) %></td>
	    <td><%= link_to 'Destroy', classtable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if current_user %>
<%= link_to 'New Classtable', new_classtable_path %>
<% end %>
