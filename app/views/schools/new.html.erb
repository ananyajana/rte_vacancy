			<div class="main-top">
				<div class="main">
			    <div class="section group">
				<div class="col span_2_of_3">
				  <div class="contact-form">
				  	<% if current_user %>
					    <%= render 'form' %>
					<% else %>
						<h1>Sorry, you don't have permission</h1>
					<% end %>
						<div>
							<span><%= link_to 'Back', schools_path %></span>
