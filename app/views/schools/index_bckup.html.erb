<h1>Listing schools</h1>

<table border="1">
  <tr border="1">
    <!--<th>User</th>-->
    <th>Reg</th>
    <th>School name</th>
    <th>Address</th>
    <th>District</th>
    <th>State</th>
    <th>Pin</th>
    <th>Phone</th>
    <th>Phone2</th>
    <th>Email</th>
    <th>Fax</th>
    <!--<th>Latitude</th>
    #<th>Longitude</th>-->
    <th></th>
    <% if current_user %>
	    <th></th>
	    <th></th>
    <% end %>
  </tr>

<% @schools.each do |school| %>
  <tr border="1">
    <!--<td><%= school.user_id %></td>-->
    <td><%= school.reg_id %></td>
    <td><%= school.school_name %></td>
    <td><%= school.address %></td>
    <td><%= school.district %></td>
    <td><%= school.state %></td>
    <td><%= school.pin %></td>
    <td><%= school.phone %></td>
    <td><%= school.phone2 %></td>
    <td><%= school.email_id %></td>
    <td><%= school.fax %></td>
    <!--<td><%= school.latitude %></td>
    #<td><%= school.longitude %></td>-->
    <td><%= link_to 'Show RTE info', school %></td>
    <% if current_user %>
	    <td><%= link_to 'Edit', edit_school_path(school) %></td>
	    <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if current_user %>
	<%= link_to 'New School', new_school_path %>
<% end %>
