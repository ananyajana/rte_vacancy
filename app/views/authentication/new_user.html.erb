<div class="header-bg">
	<div class="wrap"> 
		<div class="total-box">
				<div class="total">
					<div class="header_top">
				     	<div class="menu">
				     		<ul>
						    	<li><a href="index.html">Home</a></li>
						    	<li><a href="about.html">About Us</a></li>
						      	<li><a href="allschool.html">All Schools</a></li>
						    	<li><a href="contact.html">Contact Us</a></li>
								<% if current_user %>
									Logged in as <%= current_user.username %>.
									<li><%= link_to "Sign Out", signed_out_path %></li>
									<li><%= link_to "Account Settings", account_settings_path %></li>
									  <% if current_user.is_admin %>
										  <li><%= link_to "Admin", admin_users_path %></li>
									  <% end %>
								<% else %>
									<li class="active"><%= link_to "Sign up", new_user_path %></li> or
									<li><%= link_to "Sign In", sign_in_path %></li>
								<% end %>
								<div class="clear"></div>
							</ul>
				     	</div>
				     	
		     			<div class="clear"></div>
		     	</div>
			    <div class="header-bottom">
					 <div class="logo">
						<h1>Sign Up</h1>
					 </div>
					<div class="search">
						<%= form_tag "/schools", :method => 'get' do %>
							<p>
							<%= text_field_tag :search, params[:search], :placeholder => "School Name/Location"%>
							<%= submit_tag '', :school_name => nil %>
							</p>
						<% end %>
					</div>
					<div class="clear"></div> 
				</div>
			</div>	
		</div>
	 </div>
</div>
	<div class="banner-box">
		<div class="wrap">
			<div class="main-top">
				<div class="main">
			    <div class="section group">
				<div class="col span_2_of_3">
				  <div class="contact-form">
				  	<h3>Please fill in the below details</h3>
						<h5>
							<% flash.each do |name, msg| %>
							<%= content_tag :div, msg, :id => "flash_#{name}" %>
							<% end %>
						</h5>	
					    <%= form_for @user, :as => :user, :url => new_user_path do |f| %>
					    	<div>
						    	<span><%= f.label 'username:' %></span>
								<span><%= f.text_field :username %></span>
								<%= show_field_error(@user, :username) %>
						    </div>
							<div>
						    	<span><%= f.label 'email:' %></span>
								<span><%= f.text_field :email %></span>
								<%= show_field_error(@user, :email) %>
						    </div>
						    <div>
						    	<span><%= f.label 'password:' %></span>
								<span><%= f.password_field :password %></span>
								<%= show_field_error(@user, :password) %>
						    </div>
							<div>
						    	<span><%= f.label 'password confirmation:' %></span>
								<span><%= f.password_field :password_confirmation %></span>
								<%= show_field_error(@user, :password_confirmation) %>
						    </div>
							<div>
								<span><%= f.check_box :remember_me %></span>
								<span><%= f.label 'remember me' %></span>
							</div>
							<div>
								<span>
									<%= recaptcha_tags %>
								</span>
								
							</div>
						    <div>
						    	<%= f.submit 'Sign Up' %>
							
						    	<%= f.submit 'Clear Form', :type => 'reset' %>	
							</div>
						<% end %>
				  </div>
  				</div>
				
			</div>
		</div>
		
				<div class="clear"></div> 
				
			</div>
			</div>
		</div>
	 </div>   

    </div>