<div class="header-bg">
	<div class="wrap"> 
		<div class="total-box">
				<div class="total">
					<div class="header_top">
				     	<div class="menu">
				     		<ul>
						    	<li class="active"><a href="index.html">Home</a></li>
						    	<li><a href="/assets/about.html.erb">About</a></li>
						      	<li><a href="allschool.html">All School</a></li>
						    	<li><a href="contact.html">Contact</a></li>
								<% if current_user %>
									Logged in as <%= current_user.username %>.
									<li><%= link_to "Sign Out", signed_out_path %></li>
									<li><%= link_to "Account Settings", account_settings_path %></li>
									  <% if current_user.is_admin %>
										  <li><%= link_to "Admin", admin_users_path %></li>
									  <% end %>
								<% else %>
									<li><%= link_to "Sign up", new_user_path %></li> or
									<li><%= link_to "Sign In", sign_in_path %></li>
								<% end %>
								<div class="clear"></div>
							</ul>
				     	</div>
				     	
		     			<div class="clear"></div>
		     	</div>
			     <div class="header-bottom">
					 <div class="logo">
						<h1>Sign In</h1>
					 </div>
					<div class="search">
						<%= form_tag "/schools", :method => 'get' do %>
							<p>
							<%= text_field_tag :search, params[:search], :placeholder => "School Name/Location"%>
							<%= submit_tag '', :school_name => nil %>
							</p>
						<% end %>
					</div>
					<div class="clear"></div> 
				</div>
			</div>	
		</div>
	 </div>
</div>
	<div class="banner-box">
		<div class="wrap">
			<div class="main-top">
				<div class="main">
			    <div class="section group">
				<div class="col span_2_of_3">
				  <div class="contact-form">
				  	<h3>Please fill in the below details</h3>
					    <%= form_for @user, :as => :user, :url => sign_in_path do |f| %>
					    	<div>
						    	<p>
								  <%= f.label 'username or email:' %><br/>
								  <%= f.text_field :username %>
								</p>
						    </div>
						    <div>
						    	<p>
								  <%= f.label 'password:' %><br/>
								  <%= f.password_field :password %>
								</p>
						    </div>
							<div>
							<p>
							  <%= f.check_box :remember_me %>
							  <%= f.label 'remember me' %>
							</p>
							</div>
						    <div>
						    	<%= f.submit 'Sign In' %>
							
						    	<%= f.submit 'Clear Form', :type => 'reset' %>	
							</div>
							<div></div>
						   <div>
						   		<%= link_to 'forgot your password?', :forgot_password %>
						  </div>
					    <% end %>
				  </div>
  				</div>
				
			</div>
		</div>
		
				<div class="clear"></div> 
				
			</div>
			</div>
		</div>
	 </div>   

    </div>	
    	
            