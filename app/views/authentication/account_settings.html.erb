			<div class="main-top">
				<div class="main">
			    <div class="section group">
				<div class="col span_2_of_3">
				  <div class="contact-form">
				  	<h3>Please fill in the below details to reset your account details</h3>
					    <%= form_for @user, :as => :user, :url => account_settings_path, :method => :put do |f| %>
					    	<div>
						    	<span><%= f.label 'username: (leave unchanged if you are not changing your username)' %></span>
						    	<span><%= f.text_field :username %></span>
								<%= show_field_error(@user, :username) %>
						    </div>
							<div>
						    	<span><%= f.label 'email: (leave unchanged if you are not changing your email address)' %></span>
						    	<span><%= f.text_field :email %></span>
								<%= show_field_error(@user, :email) %>
						    </div>
						    <div>
						    	<span><%= f.label 'current password:' %></span>
								<span><%= f.password_field :password %></span>
								<%= show_field_error(@user, :password) %>
						    </div>
							<div>
						    	<span><%= f.label 'new password: (leave blank if you are not changing your password)' %></span>
						    	<span><%= f.password_field :new_password %></span>
								<%= show_field_error(@user, :new_password) %>
						    </div>
							<div>
							<span><%= f.label 'password confirmation:' %></span>
							<span><%= f.password_field :new_password_confirmation %></span>
							<%= show_field_error(@user, :new_password_confirmation) %>
							</div>
							<div>
						    	<span><input name="commit" type="submit" value="Update"></span>
							</div>
						<% end %>
				  </div>
  				</div>
				
			</div>
		</div>
		
				<div class="clear"></div> 
				
			</div>
			</div>
